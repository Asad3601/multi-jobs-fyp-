<main>
    <div class="job-listing-area pt-120 pb-120">
        <div class="container">
            <div class="row justify-content-center" id="job-listings-table">
                <div class="col-xl-9 col-lg-9 col-md-8">
                    <!-- Featured_job_start -->
                    <section class="featured-job-area">
                        <!-- Count of Job list Start -->
                        <p id="total-job">Total Jobs:
                            <%= total_jobs %>
                        </p>
                        
                            <!-- Table Start -->
                            <table class="table" border="2">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Company & Location</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% jobs.forEach((job) => { %>
                                        <tr>
                                            <td>
                                                <a href="<%= job.job_url %>">
                                                    <b><%= job.job_title %></b>
                                                </a>
                                            </td>
                                            <td>
                                                <%= job.description %>
                                            </td>
                                            <td>
                                                <%= job.company %>
                                            </td>
                                            <td>
                                                <a href="/job/<%= job._id %>" class="btn btn-primary">Save</a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                            <br><br>
                            <!-- Table End -->
                            <!-- Pagination Start -->
                            <div class="pagination-area pb-115 text-center">
                                <div class="container">
                                    <div class="row">
                                        <div class="single-wrap d-flex justify-content-start">
                                            <p id="total-pagination">Total Pages:
                                                <%= totalPages %>
                                            </p>
                                        </div>
                                        <div class="col-xl-12">
                                            <div class="single-wrap d-flex justify-content-center" id="job-listings-container2">
                                                <nav aria-label="Page navigation example">
                                                    <ul class="pagination justify-content-start">
                                                        <% if (currentPage > 1) { %>
                                                            <li class="page-item">
                                                                <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                                            </li>
                                                            <% } %>
                                                                <% for (let i = startPage; i <= endPage; i++) { %>
                                                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                                        <a class="page-link" href="?page=<%= i %>">
                                                                            <%= i %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                                        <% if (currentPage < totalPages) { %>
                                                                            <li class="page-item">
                                                                                <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                                                            </li>
                                                                            <% } %>
                                                    </ul>
                                                </nav>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Pagination End -->
                    </section>
                    <!-- Featured_job_end -->
                </div>
            </div>
        </div>
    </div>
</main>